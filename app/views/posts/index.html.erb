<h1>ツイートアプリケーション</h1>
<p id="notice"><%= notice %></p>
<table>
    <%= link_to '新規投稿', new_post_path %>
    <br>

  <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.created_at&.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>  
        <tr>
          <td><%= post.content %></td>
        </tr>
        <tr>
          <td><%= link_to '編集', edit_post_path(post) %></td>
          <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>


