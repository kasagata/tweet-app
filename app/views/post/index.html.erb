<h1>ツイートアプリケーション</h1>
<p id="notice"><%= notice %></p>
<table>
    <%= link_to 'New post', new_post_path %>
    <br>

  <tbody>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.content %></td>
        </tr>
        <tr>
            <td><%= post.created_at&.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= link_to '編集', edit_post_path(post) %></td>
            <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>


